{
  "params": {
    "data": {
      "type": "json",
      "required": true
    },
    "valueKey": {
      "type": "string",
      "required": true
    },
    "labelKey": {
      "type": "string",
      "required": false
    },
    "width": {
      "type": "number",
      "required": false
    },
    "height": {
      "type": "number",
      "required": false
    },
    "colors": {
      "type": "json",
      "required": false
    },
    "centerLabel": {
      "type": "string",
      "required": false
    }
  },
  "localState": {
    "_width": {
      "type": "number",
      "initial": {
        "expr": "cond",
        "if": { "expr": "param", "name": "width" },
        "then": { "expr": "param", "name": "width" },
        "else": { "expr": "lit", "value": 300 }
      }
    },
    "_height": {
      "type": "number",
      "initial": {
        "expr": "cond",
        "if": { "expr": "param", "name": "height" },
        "then": { "expr": "param", "name": "height" },
        "else": { "expr": "lit", "value": 300 }
      }
    },
    "_cx": {
      "type": "number",
      "initial": {
        "expr": "bin", "op": "/",
        "left": { "expr": "local", "name": "_width" },
        "right": { "expr": "lit", "value": 2 }
      }
    },
    "_cy": {
      "type": "number",
      "initial": {
        "expr": "bin", "op": "/",
        "left": { "expr": "local", "name": "_height" },
        "right": { "expr": "lit", "value": 2 }
      }
    },
    "_outerRadius": {
      "type": "number",
      "initial": {
        "expr": "bin", "op": "*",
        "left": {
          "expr": "bin", "op": "/",
          "left": {
            "expr": "call", "target": null, "method": "min",
            "args": [
              { "expr": "local", "name": "_width" },
              { "expr": "local", "name": "_height" }
            ]
          },
          "right": { "expr": "lit", "value": 2 }
        },
        "right": { "expr": "lit", "value": 0.85 }
      }
    },
    "_ringWidth": {
      "type": "number",
      "initial": { "expr": "lit", "value": 22 }
    },
    "_ringGap": {
      "type": "number",
      "initial": { "expr": "lit", "value": 6 }
    },
    "_ringLayout": {
      "type": "json",
      "initial": {
        "expr": "call", "target": null,
        "method": "getActivityRingLayout",
        "args": [
          { "expr": "param", "name": "data" },
          { "expr": "param", "name": "valueKey" },
          { "expr": "local", "name": "_cx" },
          { "expr": "local", "name": "_cy" },
          { "expr": "local", "name": "_outerRadius" },
          { "expr": "local", "name": "_ringWidth" },
          { "expr": "local", "name": "_ringGap" }
        ]
      }
    },
    "_defaultColors": {
      "type": "json",
      "initial": {
        "expr": "call", "target": null,
        "method": "getChartDefaultColors",
        "args": [{ "expr": "lit", "value": "activity" }]
      }
    }
  },
  "view": {
    "kind": "element",
    "tag": "svg",
    "props": {
      "role": {
        "expr": "lit",
        "value": "img"
      },
      "aria-label": {
        "expr": "lit",
        "value": "Donut Chart"
      },
      "aria-labelledby": {
        "expr": "lit",
        "value": "donut-chart-title"
      },
      "viewBox": { "expr": "concat", "items": [
          { "expr": "lit", "value": "0 0 " },
          { "expr": "local", "name": "_width" },
          { "expr": "lit", "value": " " },
          { "expr": "local", "name": "_height" }
        ]
      },
      "className": {
        "expr": "style",
        "name": "chartSvg",
        "variants": {
          "size": {
            "expr": "lit",
            "value": "default"
          }
        }
      }
    },
    "children": [
      {
        "kind": "element",
        "tag": "title",
        "props": {
          "id": {
            "expr": "lit",
            "value": "donut-chart-title"
          }
        },
        "children": [
          {
            "kind": "text",
            "value": {
              "expr": "lit",
              "value": "Donut Chart"
            }
          }
        ]
      },
      {
        "kind": "element",
        "tag": "defs",
        "props": {},
        "children": [
          {
            "kind": "element",
            "tag": "filter",
            "props": { "id": { "expr": "lit", "value": "ringGlow" } },
            "children": [
              { "kind": "element", "tag": "feGaussianBlur", "props": { "in": { "expr": "lit", "value": "SourceAlpha" }, "stdDeviation": { "expr": "lit", "value": "2" } } },
              { "kind": "element", "tag": "feOffset", "props": { "dx": { "expr": "lit", "value": "0" }, "dy": { "expr": "lit", "value": "1" } } },
              { "kind": "element", "tag": "feComponentTransfer", "props": {}, "children": [
                { "kind": "element", "tag": "feFuncA", "props": { "type": { "expr": "lit", "value": "linear" }, "slope": { "expr": "lit", "value": "0.3" } } }
              ] },
              { "kind": "element", "tag": "feMerge", "props": {}, "children": [
                { "kind": "element", "tag": "feMergeNode", "props": {} },
                { "kind": "element", "tag": "feMergeNode", "props": { "in": { "expr": "lit", "value": "SourceGraphic" } } }
              ] }
            ]
          }
        ]
      },
      {
        "kind": "element",
        "tag": "g",
        "props": {
          "transform": {
            "expr": "concat", "items": [
              { "expr": "lit", "value": "translate(" },
              { "expr": "local", "name": "_cx" },
              { "expr": "lit", "value": ", " },
              { "expr": "local", "name": "_cy" },
              { "expr": "lit", "value": ")" }
            ]
          },
          "filter": { "expr": "lit", "value": "url(#ringGlow)" }
        },
        "children": [
          {
            "kind": "each",
            "items": { "expr": "local", "name": "_ringLayout" },
            "as": "ring",
            "index": "ringIdx",
            "body": {
              "kind": "element",
              "tag": "circle",
              "props": {
                "cx": { "expr": "lit", "value": 0 },
                "cy": { "expr": "lit", "value": 0 },
                "r": { "expr": "get", "base": { "expr": "var", "name": "ring" }, "path": "radius" },
                "fill": { "expr": "lit", "value": "none" },
                "stroke": {
                  "expr": "cond",
                  "if": { "expr": "param", "name": "colors" },
                  "then": {
                    "expr": "call",
                    "target": { "expr": "param", "name": "colors" },
                    "method": "at",
                    "args": [{
                      "expr": "bin", "op": "%",
                      "left": { "expr": "var", "name": "ringIdx" },
                      "right": { "expr": "call", "target": { "expr": "param", "name": "colors" }, "method": "length", "args": [] }
                    }]
                  },
                  "else": {
                    "expr": "call",
                    "target": { "expr": "local", "name": "_defaultColors" },
                    "method": "at",
                    "args": [{
                      "expr": "bin", "op": "%",
                      "left": { "expr": "var", "name": "ringIdx" },
                      "right": { "expr": "call", "target": { "expr": "local", "name": "_defaultColors" }, "method": "length", "args": [] }
                    }]
                  }
                },
                "stroke-width": { "expr": "local", "name": "_ringWidth" },
                "stroke-opacity": { "expr": "lit", "value": "0.15" },
                "stroke-linecap": { "expr": "lit", "value": "round" }
              }
            }
          },
          {
            "kind": "each",
            "items": { "expr": "local", "name": "_ringLayout" },
            "as": "ring",
            "index": "ringIdx",
            "body": {
              "kind": "element",
              "tag": "path",
              "props": {
                "d": {
                  "expr": "call",
                  "target": null,
                  "method": "getActivityRingArcPath",
                  "args": [
                    { "expr": "lit", "value": 0 },
                    { "expr": "lit", "value": 0 },
                    { "expr": "get", "base": { "expr": "var", "name": "ring" }, "path": "radius" },
                    { "expr": "lit", "value": 0 },
                    { "expr": "get", "base": { "expr": "var", "name": "ring" }, "path": "angle" }
                  ]
                },
                "fill": { "expr": "lit", "value": "none" },
                "stroke": {
                  "expr": "cond",
                  "if": { "expr": "param", "name": "colors" },
                  "then": {
                    "expr": "call",
                    "target": { "expr": "param", "name": "colors" },
                    "method": "at",
                    "args": [{
                      "expr": "bin", "op": "%",
                      "left": { "expr": "var", "name": "ringIdx" },
                      "right": { "expr": "call", "target": { "expr": "param", "name": "colors" }, "method": "length", "args": [] }
                    }]
                  },
                  "else": {
                    "expr": "call",
                    "target": { "expr": "local", "name": "_defaultColors" },
                    "method": "at",
                    "args": [{
                      "expr": "bin", "op": "%",
                      "left": { "expr": "var", "name": "ringIdx" },
                      "right": { "expr": "call", "target": { "expr": "local", "name": "_defaultColors" }, "method": "length", "args": [] }
                    }]
                  }
                },
                "stroke-width": { "expr": "local", "name": "_ringWidth" },
                "stroke-linecap": { "expr": "lit", "value": "round" }
              }
            }
          }
        ]
      },
      {
        "kind": "if",
        "condition": {
          "expr": "param",
          "name": "centerLabel"
        },
        "then": {
          "kind": "element",
          "tag": "text",
          "props": {
            "x": { "expr": "local", "name": "_cx" },
            "y": { "expr": "local", "name": "_cy" },
            "text-anchor": {
              "expr": "lit",
              "value": "middle"
            },
            "dominant-baseline": {
              "expr": "lit",
              "value": "middle"
            },
            "className": {
              "expr": "style",
              "name": "chartLabel",
              "variants": {
                "type": {
                  "expr": "lit",
                  "value": "title"
                },
                "size": {
                  "expr": "lit",
                  "value": "lg"
                }
              }
            }
          },
          "children": [
            {
              "kind": "text",
              "value": {
                "expr": "param",
                "name": "centerLabel"
              }
            }
          ]
        }
      }
    ]
  }
}
