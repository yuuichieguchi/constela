{
  "params": {
    "data": {
      "type": "json",
      "required": true
    },
    "valueKey": {
      "type": "string",
      "required": true
    },
    "labelKey": {
      "type": "string",
      "required": false
    },
    "width": {
      "type": "number",
      "required": false
    },
    "height": {
      "type": "number",
      "required": false
    },
    "colors": {
      "type": "json",
      "required": false
    },
    "showGrid": {
      "type": "boolean",
      "required": false
    },
    "showLabels": {
      "type": "boolean",
      "required": false
    },
    "orientation": {
      "type": "string",
      "required": false
    },
    "barGap": {
      "type": "number",
      "required": false
    },
    "barRadius": {
      "type": "number",
      "required": false
    }
  },
  "localState": {
    "_width": {
      "type": "number",
      "initial": {
        "expr": "cond",
        "if": {
          "expr": "param",
          "name": "width"
        },
        "then": {
          "expr": "param",
          "name": "width"
        },
        "else": {
          "expr": "lit",
          "value": 400
        }
      }
    },
    "_height": {
      "type": "number",
      "initial": {
        "expr": "cond",
        "if": {
          "expr": "param",
          "name": "height"
        },
        "then": {
          "expr": "param",
          "name": "height"
        },
        "else": {
          "expr": "lit",
          "value": 300
        }
      }
    },
    "_barGap": {
      "type": "number",
      "initial": {
        "expr": "cond",
        "if": {
          "expr": "param",
          "name": "barGap"
        },
        "then": {
          "expr": "param",
          "name": "barGap"
        },
        "else": {
          "expr": "lit",
          "value": 6
        }
      }
    },
    "_orientation": {
      "type": "string",
      "initial": {
        "expr": "cond",
        "if": {
          "expr": "param",
          "name": "orientation"
        },
        "then": {
          "expr": "param",
          "name": "orientation"
        },
        "else": {
          "expr": "lit",
          "value": "vertical"
        }
      }
    },
    "_paddingTop": {
      "type": "number",
      "initial": { "expr": "lit", "value": 20 }
    },
    "_paddingBottom": {
      "type": "number",
      "initial": { "expr": "lit", "value": 40 }
    },
    "_gridLines": {
      "type": "json",
      "initial": {
        "expr": "call",
        "target": null,
        "method": "getChartGridLines",
        "args": [
          { "expr": "lit", "value": 0 },
          { "expr": "lit", "value": 100 },
          { "expr": "local", "name": "_height" },
          { "expr": "lit", "value": 20 },
          { "expr": "lit", "value": 40 },
          { "expr": "lit", "value": 5 }
        ]
      }
    }
  },
  "view": {
    "kind": "element",
    "tag": "svg",
    "props": {
      "role": {
        "expr": "lit",
        "value": "img"
      },
      "aria-label": {
        "expr": "lit",
        "value": "Bar Chart"
      },
      "aria-labelledby": {
        "expr": "lit",
        "value": "bar-chart-title"
      },
      "viewBox": { "expr": "concat", "items": [
          {
            "expr": "lit",
            "value": "0 0 "
          },
          {
            "expr": "local",
            "name": "_width"
          },
          {
            "expr": "lit",
            "value": " "
          },
          {
            "expr": "local",
            "name": "_height"
          }
        ]
      },
      "className": {
        "expr": "style",
        "name": "chartSvg",
        "variants": {
          "size": {
            "expr": "lit",
            "value": "default"
          }
        }
      }
    },
    "children": [
      {
        "kind": "element",
        "tag": "title",
        "props": {
          "id": {
            "expr": "lit",
            "value": "bar-chart-title"
          }
        },
        "children": [
          {
            "kind": "text",
            "value": {
              "expr": "lit",
              "value": "Bar Chart"
            }
          }
        ]
      },
      {
        "kind": "element",
        "tag": "defs",
        "props": {},
        "children": [
          {
            "kind": "element",
            "tag": "linearGradient",
            "props": {
              "id": { "expr": "lit", "value": "barGradient0" },
              "x1": { "expr": "lit", "value": "0" },
              "y1": { "expr": "lit", "value": "1" },
              "x2": { "expr": "lit", "value": "0" },
              "y2": { "expr": "lit", "value": "0" }
            },
            "children": [
              {
                "kind": "element",
                "tag": "stop",
                "props": {
                  "offset": { "expr": "lit", "value": "0%" },
                  "stop-color": { "expr": "lit", "value": "#007AFF" }
                }
              },
              {
                "kind": "element",
                "tag": "stop",
                "props": {
                  "offset": { "expr": "lit", "value": "100%" },
                  "stop-color": { "expr": "lit", "value": "#5AC8FA" }
                }
              }
            ]
          },
          {
            "kind": "element",
            "tag": "filter",
            "props": { "id": { "expr": "lit", "value": "barShadow" } },
            "children": [
              { "kind": "element", "tag": "feGaussianBlur", "props": { "in": { "expr": "lit", "value": "SourceAlpha" }, "stdDeviation": { "expr": "lit", "value": "2" } } },
              { "kind": "element", "tag": "feOffset", "props": { "dx": { "expr": "lit", "value": "0" }, "dy": { "expr": "lit", "value": "2" } } },
              { "kind": "element", "tag": "feComponentTransfer", "props": {}, "children": [
                { "kind": "element", "tag": "feFuncA", "props": { "type": { "expr": "lit", "value": "linear" }, "slope": { "expr": "lit", "value": "0.15" } } }
              ] },
              { "kind": "element", "tag": "feMerge", "props": {}, "children": [
                { "kind": "element", "tag": "feMergeNode", "props": {} },
                { "kind": "element", "tag": "feMergeNode", "props": { "in": { "expr": "lit", "value": "SourceGraphic" } } }
              ] }
            ]
          }
        ]
      },
      {
        "kind": "if",
        "condition": {
          "expr": "param",
          "name": "showGrid"
        },
        "then": {
          "kind": "element",
          "tag": "g",
          "props": {
            "className": {
              "expr": "style",
              "name": "chartGrid",
              "variants": {
                "axis": {
                  "expr": "lit",
                  "value": "both"
                }
              }
            }
          },
          "children": [
            {
              "kind": "each",
              "items": { "expr": "local", "name": "_gridLines" },
              "as": "gl",
              "index": "glIdx",
              "body": {
                "kind": "element",
                "tag": "g",
                "props": {},
                "children": [
                  {
                    "kind": "element",
                    "tag": "line",
                    "props": {
                      "x1": { "expr": "lit", "value": "0" },
                      "y1": { "expr": "get", "base": { "expr": "var", "name": "gl" }, "path": "y" },
                      "x2": { "expr": "local", "name": "_width" },
                      "y2": { "expr": "get", "base": { "expr": "var", "name": "gl" }, "path": "y" },
                      "stroke": { "expr": "lit", "value": "#d1d5db" },
                      "stroke-width": { "expr": "lit", "value": "0.5" },
                      "stroke-opacity": { "expr": "lit", "value": "0.25" }
                    }
                  },
                  {
                    "kind": "element",
                    "tag": "text",
                    "props": {
                      "x": { "expr": "lit", "value": 8 },
                      "y": { "expr": "bin", "op": "+", "left": { "expr": "get", "base": { "expr": "var", "name": "gl" }, "path": "y" }, "right": { "expr": "lit", "value": 3 } },
                      "text-anchor": { "expr": "lit", "value": "start" },
                      "className": { "expr": "style", "name": "chartYLabel" }
                    },
                    "children": [
                      { "kind": "text", "value": { "expr": "get", "base": { "expr": "var", "name": "gl" }, "path": "label" } }
                    ]
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "kind": "element",
        "tag": "g",
        "props": {
          "className": {
            "expr": "lit",
            "value": "bars"
          }
        },
        "children": [
          {
            "kind": "each",
            "items": {
              "expr": "param",
              "name": "data"
            },
            "as": "item",
            "index": "idx",
            "body": {
              "kind": "element",
              "tag": "path",
              "props": {
                "d": {
                  "expr": "call",
                  "target": null,
                  "method": "getRoundedBarPath",
                  "args": [
                    {
                      "expr": "get",
                      "base": {
                        "expr": "call",
                        "target": null,
                        "method": "getBarDimensions",
                        "args": [
                          { "expr": "param", "name": "data" },
                          { "expr": "var", "name": "idx" },
                          { "expr": "local", "name": "_width" },
                          { "expr": "local", "name": "_height" },
                          { "expr": "local", "name": "_barGap" },
                          { "expr": "local", "name": "_orientation" },
                          { "expr": "param", "name": "valueKey" }
                        ]
                      },
                      "path": "x"
                    },
                    {
                      "expr": "get",
                      "base": {
                        "expr": "call",
                        "target": null,
                        "method": "getBarDimensions",
                        "args": [
                          { "expr": "param", "name": "data" },
                          { "expr": "var", "name": "idx" },
                          { "expr": "local", "name": "_width" },
                          { "expr": "local", "name": "_height" },
                          { "expr": "local", "name": "_barGap" },
                          { "expr": "local", "name": "_orientation" },
                          { "expr": "param", "name": "valueKey" }
                        ]
                      },
                      "path": "y"
                    },
                    {
                      "expr": "get",
                      "base": {
                        "expr": "call",
                        "target": null,
                        "method": "getBarDimensions",
                        "args": [
                          { "expr": "param", "name": "data" },
                          { "expr": "var", "name": "idx" },
                          { "expr": "local", "name": "_width" },
                          { "expr": "local", "name": "_height" },
                          { "expr": "local", "name": "_barGap" },
                          { "expr": "local", "name": "_orientation" },
                          { "expr": "param", "name": "valueKey" }
                        ]
                      },
                      "path": "width"
                    },
                    {
                      "expr": "get",
                      "base": {
                        "expr": "call",
                        "target": null,
                        "method": "getBarDimensions",
                        "args": [
                          { "expr": "param", "name": "data" },
                          { "expr": "var", "name": "idx" },
                          { "expr": "local", "name": "_width" },
                          { "expr": "local", "name": "_height" },
                          { "expr": "local", "name": "_barGap" },
                          { "expr": "local", "name": "_orientation" },
                          { "expr": "param", "name": "valueKey" }
                        ]
                      },
                      "path": "height"
                    },
                    {
                      "expr": "cond",
                      "if": { "expr": "param", "name": "barRadius" },
                      "then": { "expr": "param", "name": "barRadius" },
                      "else": { "expr": "lit", "value": 8 }
                    }
                  ]
                },
                "fill": {
                  "expr": "cond",
                  "if": {
                    "expr": "param",
                    "name": "colors"
                  },
                  "then": {
                    "expr": "call",
                    "target": {
                      "expr": "param",
                      "name": "colors"
                    },
                    "method": "at",
                    "args": [
                      {
                        "expr": "bin",
                        "op": "%",
                        "left": {
                          "expr": "var",
                          "name": "idx"
                        },
                        "right": {
                          "expr": "call",
                          "target": {
                            "expr": "param",
                            "name": "colors"
                          },
                          "method": "length",
                          "args": []
                        }
                      }
                    ]
                  },
                  "else": {
                    "expr": "lit",
                    "value": "url(#barGradient0)"
                  }
                },
                "filter": { "expr": "lit", "value": "url(#barShadow)" },
                "className": {
                  "expr": "style",
                  "name": "chartBar",
                  "variants": {
                    "state": {
                      "expr": "lit",
                      "value": "default"
                    }
                  }
                }
              }
            }
          }
        ]
      },
      {
        "kind": "if",
        "condition": {
          "expr": "param",
          "name": "showLabels"
        },
        "then": {
          "kind": "element",
          "tag": "g",
          "props": {
            "className": {
              "expr": "style",
              "name": "chartLabel",
              "variants": {
                "type": {
                  "expr": "lit",
                  "value": "axis"
                }
              }
            }
          },
          "children": [
            {
              "kind": "each",
              "items": {
                "expr": "param",
                "name": "data"
              },
              "as": "item",
              "index": "idx",
              "body": {
                "kind": "element",
                "tag": "text",
                "props": {
                  "x": {
                    "expr": "bin",
                    "op": "+",
                    "left": {
                      "expr": "get",
                      "base": {
                        "expr": "call",
                        "target": null,
                        "method": "getBarDimensions",
                        "args": [
                          {
                            "expr": "param",
                            "name": "data"
                          },
                          {
                            "expr": "var",
                            "name": "idx"
                          },
                          {
                            "expr": "local",
                            "name": "_width"
                          },
                          {
                            "expr": "local",
                            "name": "_height"
                          },
                          {
                            "expr": "local",
                            "name": "_barGap"
                          },
                          {
                            "expr": "local",
                            "name": "_orientation"
                          },
                          {
                            "expr": "param",
                            "name": "valueKey"
                          }
                        ]
                      },
                      "path": "x"
                    },
                    "right": {
                      "expr": "bin",
                      "op": "/",
                      "left": {
                        "expr": "get",
                        "base": {
                          "expr": "call",
                          "target": null,
                          "method": "getBarDimensions",
                          "args": [
                            {
                              "expr": "param",
                              "name": "data"
                            },
                            {
                              "expr": "var",
                              "name": "idx"
                            },
                            {
                              "expr": "local",
                              "name": "_width"
                            },
                            {
                              "expr": "local",
                              "name": "_height"
                            },
                            {
                              "expr": "local",
                              "name": "_barGap"
                            },
                            {
                              "expr": "local",
                              "name": "_orientation"
                            },
                            {
                              "expr": "param",
                              "name": "valueKey"
                            }
                          ]
                        },
                        "path": "width"
                      },
                      "right": {
                        "expr": "lit",
                        "value": 2
                      }
                    }
                  },
                  "y": {
                    "expr": "bin",
                    "op": "+",
                    "left": {
                      "expr": "local",
                      "name": "_height"
                    },
                    "right": {
                      "expr": "lit",
                      "value": 15
                    }
                  },
                  "text-anchor": {
                    "expr": "lit",
                    "value": "middle"
                  }
                },
                "children": [
                  {
                    "kind": "text",
                    "value": {
                      "expr": "cond",
                      "if": {
                        "expr": "param",
                        "name": "labelKey"
                      },
                      "then": {
                        "expr": "index", "base": {
                          "expr": "var",
                          "name": "item"
                        }, "key": {
                          "expr": "param",
                          "name": "labelKey"
                        }
                      },
                      "else": {
                        "expr": "var",
                        "name": "idx"
                      }
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  }
}
