{
  "params": {
    "data": {
      "type": "json",
      "required": true
    },
    "xKey": {
      "type": "string",
      "required": true
    },
    "yKey": {
      "type": "string",
      "required": true
    },
    "width": {
      "type": "number",
      "required": false
    },
    "height": {
      "type": "number",
      "required": false
    },
    "colors": {
      "type": "json",
      "required": false
    },
    "sizeKey": {
      "type": "string",
      "required": false
    },
    "colorKey": {
      "type": "string",
      "required": false
    },
    "pointRadius": {
      "type": "number",
      "required": false
    },
    "showGrid": {
      "type": "boolean",
      "required": false
    },
    "showLabels": {
      "type": "boolean",
      "required": false
    }
  },
  "localState": {
    "_width": {
      "type": "number",
      "initial": {
        "expr": "cond",
        "if": { "expr": "param", "name": "width" },
        "then": { "expr": "param", "name": "width" },
        "else": { "expr": "lit", "value": 400 }
      }
    },
    "_height": {
      "type": "number",
      "initial": {
        "expr": "cond",
        "if": { "expr": "param", "name": "height" },
        "then": { "expr": "param", "name": "height" },
        "else": { "expr": "lit", "value": 300 }
      }
    },
    "_paddingTop": {
      "type": "number",
      "initial": { "expr": "lit", "value": 20 }
    },
    "_paddingBottom": {
      "type": "number",
      "initial": { "expr": "lit", "value": 40 }
    },
    "_bounds": {
      "type": "json",
      "initial": {
        "expr": "call",
        "target": null,
        "method": "getChartBounds",
        "args": [
          { "expr": "param", "name": "data" },
          { "expr": "param", "name": "yKey" }
        ]
      }
    },
    "_gridLines": {
      "type": "json",
      "initial": {
        "expr": "call",
        "target": null,
        "method": "getChartGridLines",
        "args": [
          { "expr": "get", "base": { "expr": "local", "name": "_bounds" }, "path": "min" },
          { "expr": "get", "base": { "expr": "local", "name": "_bounds" }, "path": "max" },
          { "expr": "local", "name": "_height" },
          { "expr": "local", "name": "_paddingTop" },
          { "expr": "local", "name": "_paddingBottom" },
          { "expr": "lit", "value": 5 }
        ]
      }
    }
  },
  "view": {
    "kind": "element",
    "tag": "svg",
    "props": {
      "role": {
        "expr": "lit",
        "value": "img"
      },
      "aria-label": {
        "expr": "lit",
        "value": "Scatter Chart"
      },
      "aria-labelledby": {
        "expr": "lit",
        "value": "scatter-chart-title"
      },
      "viewBox": { "expr": "concat", "items": [
          {
            "expr": "lit",
            "value": "0 0 "
          },
          {
            "expr": "cond",
            "if": {
              "expr": "param",
              "name": "width"
            },
            "then": {
              "expr": "param",
              "name": "width"
            },
            "else": {
              "expr": "lit",
              "value": 400
            }
          },
          {
            "expr": "lit",
            "value": " "
          },
          {
            "expr": "cond",
            "if": {
              "expr": "param",
              "name": "height"
            },
            "then": {
              "expr": "param",
              "name": "height"
            },
            "else": {
              "expr": "lit",
              "value": 300
            }
          }
        ]
      },
      "className": {
        "expr": "style",
        "name": "chartSvg",
        "variants": {
          "size": {
            "expr": "lit",
            "value": "default"
          }
        }
      }
    },
    "children": [
      {
        "kind": "element",
        "tag": "title",
        "props": {
          "id": {
            "expr": "lit",
            "value": "scatter-chart-title"
          }
        },
        "children": [
          {
            "kind": "text",
            "value": {
              "expr": "lit",
              "value": "Scatter Chart"
            }
          }
        ]
      },
      {
        "kind": "element",
        "tag": "defs",
        "props": {},
        "children": [
          {
            "kind": "element",
            "tag": "radialGradient",
            "props": {
              "id": { "expr": "lit", "value": "scatterGradient0" }
            },
            "children": [
              {
                "kind": "element",
                "tag": "stop",
                "props": {
                  "offset": { "expr": "lit", "value": "0%" },
                  "stop-color": { "expr": "lit", "value": "#5AC8FA" }
                }
              },
              {
                "kind": "element",
                "tag": "stop",
                "props": {
                  "offset": { "expr": "lit", "value": "100%" },
                  "stop-color": { "expr": "lit", "value": "#007AFF" }
                }
              }
            ]
          },
          {
            "kind": "element",
            "tag": "filter",
            "props": {
              "id": { "expr": "lit", "value": "scatterShadow" }
            },
            "children": [
              {
                "kind": "element",
                "tag": "feGaussianBlur",
                "props": {
                  "in": { "expr": "lit", "value": "SourceAlpha" },
                  "stdDeviation": { "expr": "lit", "value": "2" }
                }
              },
              {
                "kind": "element",
                "tag": "feOffset",
                "props": {
                  "dx": { "expr": "lit", "value": "0" },
                  "dy": { "expr": "lit", "value": "1" }
                }
              },
              {
                "kind": "element",
                "tag": "feComponentTransfer",
                "props": {},
                "children": [
                  { "kind": "element", "tag": "feFuncA", "props": { "type": { "expr": "lit", "value": "linear" }, "slope": { "expr": "lit", "value": "0.2" } } }
                ]
              },
              {
                "kind": "element",
                "tag": "feMerge",
                "props": {},
                "children": [
                  {
                    "kind": "element",
                    "tag": "feMergeNode",
                    "props": {}
                  },
                  {
                    "kind": "element",
                    "tag": "feMergeNode",
                    "props": {
                      "in": { "expr": "lit", "value": "SourceGraphic" }
                    }
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "kind": "if",
        "condition": { "expr": "param", "name": "showGrid" },
        "then": {
          "kind": "element",
          "tag": "g",
          "props": {},
          "children": [
            {
              "kind": "each",
              "items": { "expr": "local", "name": "_gridLines" },
              "as": "gl",
              "body": {
                "kind": "element",
                "tag": "line",
                "props": {
                  "x1": { "expr": "lit", "value": "40" },
                  "y1": { "expr": "get", "base": { "expr": "var", "name": "gl" }, "path": "y" },
                  "x2": { "expr": "local", "name": "_width" },
                  "y2": { "expr": "get", "base": { "expr": "var", "name": "gl" }, "path": "y" },
                  "stroke": { "expr": "lit", "value": "#d1d5db" },
                  "stroke-width": { "expr": "lit", "value": "0.5" },
                  "stroke-opacity": { "expr": "lit", "value": "0.25" }
                }
              }
            }
          ]
        }
      },
      {
        "kind": "element",
        "tag": "g",
        "props": {},
        "children": [
          {
            "kind": "each",
            "items": {
              "expr": "param",
              "name": "data"
            },
            "as": "item",
            "index": "idx",
            "body": {
              "kind": "element",
              "tag": "circle",
              "props": {
                "cx": {
                  "expr": "bin",
                  "op": "+",
                  "left": {
                    "expr": "lit",
                    "value": 40
                  },
                  "right": {
                    "expr": "bin",
                    "op": "*",
                    "left": {
                      "expr": "index", "base": {
                        "expr": "var",
                        "name": "item"
                      }, "key": {
                        "expr": "param",
                        "name": "xKey"
                      }
                    },
                    "right": {
                      "expr": "lit",
                      "value": 3
                    }
                  }
                },
                "cy": {
                  "expr": "call",
                  "target": null,
                  "method": "scaleChartY",
                  "args": [
                    { "expr": "index", "base": { "expr": "var", "name": "item" }, "key": { "expr": "param", "name": "yKey" } },
                    { "expr": "get", "base": { "expr": "local", "name": "_bounds" }, "path": "min" },
                    { "expr": "get", "base": { "expr": "local", "name": "_bounds" }, "path": "max" },
                    { "expr": "local", "name": "_height" },
                    { "expr": "local", "name": "_paddingTop" },
                    { "expr": "local", "name": "_paddingBottom" }
                  ]
                },
                "r": {
                  "expr": "cond",
                  "if": {
                    "expr": "param",
                    "name": "sizeKey"
                  },
                  "then": {
                    "expr": "bin",
                    "op": "+",
                    "left": {
                      "expr": "cond",
                      "if": {
                        "expr": "param",
                        "name": "pointRadius"
                      },
                      "then": {
                        "expr": "param",
                        "name": "pointRadius"
                      },
                      "else": {
                        "expr": "lit",
                        "value": 6
                      }
                    },
                    "right": {
                      "expr": "index", "base": {
                        "expr": "var",
                        "name": "item"
                      }, "key": {
                        "expr": "param",
                        "name": "sizeKey"
                      }
                    }
                  },
                  "else": {
                    "expr": "cond",
                    "if": {
                      "expr": "param",
                      "name": "pointRadius"
                    },
                    "then": {
                      "expr": "param",
                      "name": "pointRadius"
                    },
                    "else": {
                      "expr": "lit",
                      "value": 6
                    }
                  }
                },
                "fill": {
                  "expr": "cond",
                  "if": {
                    "expr": "param",
                    "name": "colors"
                  },
                  "then": {
                    "expr": "call",
                    "target": {
                      "expr": "param",
                      "name": "colors"
                    },
                    "method": "at",
                    "args": [
                      {
                        "expr": "bin",
                        "op": "%",
                        "left": {
                          "expr": "var",
                          "name": "idx"
                        },
                        "right": {
                          "expr": "call",
                          "target": {
                            "expr": "param",
                            "name": "colors"
                          },
                          "method": "length",
                          "args": []
                        }
                      }
                    ]
                  },
                  "else": {
                    "expr": "lit",
                    "value": "#007AFF"
                  }
                },
                "stroke": {
                  "expr": "lit",
                  "value": "white"
                },
                "stroke-width": {
                  "expr": "lit",
                  "value": "1.5"
                },
                "filter": {
                  "expr": "lit",
                  "value": "url(#scatterShadow)"
                },
                "tabindex": {
                  "expr": "lit",
                  "value": "0"
                },
                "className": {
                  "expr": "style",
                  "name": "chartPoint",
                  "variants": {
                    "size": {
                      "expr": "lit",
                      "value": "default"
                    },
                    "state": {
                      "expr": "lit",
                      "value": "default"
                    }
                  }
                }
              }
            }
          }
        ]
      },
      {
        "kind": "if",
        "condition": {
          "expr": "param",
          "name": "showLabels"
        },
        "then": {
          "kind": "element",
          "tag": "g",
          "props": {
            "className": {
              "expr": "style",
              "name": "chartLabel",
              "variants": {
                "type": {
                  "expr": "lit",
                  "value": "axis"
                }
              }
            }
          },
          "children": [
            {
              "kind": "element",
              "tag": "text",
              "props": {
                "x": {
                  "expr": "bin",
                  "op": "/",
                  "left": {
                    "expr": "cond",
                    "if": {
                      "expr": "param",
                      "name": "width"
                    },
                    "then": {
                      "expr": "param",
                      "name": "width"
                    },
                    "else": {
                      "expr": "lit",
                      "value": 400
                    }
                  },
                  "right": {
                    "expr": "lit",
                    "value": 2
                  }
                },
                "y": {
                  "expr": "bin",
                  "op": "-",
                  "left": {
                    "expr": "cond",
                    "if": {
                      "expr": "param",
                      "name": "height"
                    },
                    "then": {
                      "expr": "param",
                      "name": "height"
                    },
                    "else": {
                      "expr": "lit",
                      "value": 300
                    }
                  },
                  "right": {
                    "expr": "lit",
                    "value": 10
                  }
                },
                "text-anchor": {
                  "expr": "lit",
                  "value": "middle"
                }
              },
              "children": [
                {
                  "kind": "text",
                  "value": {
                    "expr": "param",
                    "name": "xKey"
                  }
                }
              ]
            }
          ]
        }
      }
    ]
  }
}
