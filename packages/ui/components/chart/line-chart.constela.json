{
  "params": {
    "data": {
      "type": "json",
      "required": true
    },
    "valueKey": {
      "type": "string",
      "required": true
    },
    "labelKey": {
      "type": "string",
      "required": false
    },
    "width": {
      "type": "number",
      "required": false
    },
    "height": {
      "type": "number",
      "required": false
    },
    "colors": {
      "type": "json",
      "required": false
    },
    "showGrid": {
      "type": "boolean",
      "required": false
    },
    "showLabels": {
      "type": "boolean",
      "required": false
    },
    "curved": {
      "type": "boolean",
      "required": false
    },
    "showPoints": {
      "type": "boolean",
      "required": false
    },
    "pointRadius": {
      "type": "number",
      "required": false
    },
    "strokeWidth": {
      "type": "number",
      "required": false
    }
  },
  "localState": {
    "_width": {
      "type": "number",
      "initial": {
        "expr": "cond",
        "if": {
          "expr": "param",
          "name": "width"
        },
        "then": {
          "expr": "param",
          "name": "width"
        },
        "else": {
          "expr": "lit",
          "value": 400
        }
      }
    },
    "_height": {
      "type": "number",
      "initial": {
        "expr": "cond",
        "if": {
          "expr": "param",
          "name": "height"
        },
        "then": {
          "expr": "param",
          "name": "height"
        },
        "else": {
          "expr": "lit",
          "value": 300
        }
      }
    },
    "_paddingTop": {
      "type": "number",
      "initial": { "expr": "lit", "value": 20 }
    },
    "_paddingBottom": {
      "type": "number",
      "initial": { "expr": "lit", "value": 40 }
    },
    "_bounds": {
      "type": "json",
      "initial": {
        "expr": "call",
        "target": null,
        "method": "getChartBounds",
        "args": [
          { "expr": "param", "name": "data" },
          { "expr": "param", "name": "valueKey" }
        ]
      }
    },
    "_paddingLeft": {
      "type": "number",
      "initial": { "expr": "lit", "value": 50 }
    },
    "_gridLines": {
      "type": "json",
      "initial": {
        "expr": "call",
        "target": null,
        "method": "getChartGridLines",
        "args": [
          { "expr": "get", "base": { "expr": "local", "name": "_bounds" }, "path": "min" },
          { "expr": "get", "base": { "expr": "local", "name": "_bounds" }, "path": "max" },
          { "expr": "local", "name": "_height" },
          { "expr": "local", "name": "_paddingTop" },
          { "expr": "local", "name": "_paddingBottom" },
          { "expr": "lit", "value": 5 }
        ]
      }
    }
  },
  "view": {
    "kind": "element",
    "tag": "svg",
    "props": {
      "role": {
        "expr": "lit",
        "value": "img"
      },
      "aria-label": {
        "expr": "lit",
        "value": "Line Chart"
      },
      "aria-labelledby": {
        "expr": "lit",
        "value": "line-chart-title"
      },
      "viewBox": { "expr": "concat", "items": [
          {
            "expr": "lit",
            "value": "0 0 "
          },
          {
            "expr": "local",
            "name": "_width"
          },
          {
            "expr": "lit",
            "value": " "
          },
          {
            "expr": "local",
            "name": "_height"
          }
        ]
      },
      "className": {
        "expr": "style",
        "name": "chartSvg",
        "variants": {
          "size": {
            "expr": "lit",
            "value": "default"
          }
        }
      }
    },
    "children": [
      {
        "kind": "element",
        "tag": "title",
        "props": {
          "id": {
            "expr": "lit",
            "value": "line-chart-title"
          }
        },
        "children": [
          {
            "kind": "text",
            "value": {
              "expr": "lit",
              "value": "Line Chart"
            }
          }
        ]
      },
      {
        "kind": "element",
        "tag": "defs",
        "props": {},
        "children": [
          {
            "kind": "element",
            "tag": "linearGradient",
            "props": {
              "id": { "expr": "lit", "value": "lineGradient0" },
              "x1": { "expr": "lit", "value": "0" },
              "y1": { "expr": "lit", "value": "0" },
              "x2": { "expr": "lit", "value": "1" },
              "y2": { "expr": "lit", "value": "0" }
            },
            "children": [
              {
                "kind": "element",
                "tag": "stop",
                "props": {
                  "offset": { "expr": "lit", "value": "0%" },
                  "stop-color": { "expr": "lit", "value": "#30D158" }
                }
              },
              {
                "kind": "element",
                "tag": "stop",
                "props": {
                  "offset": { "expr": "lit", "value": "100%" },
                  "stop-color": { "expr": "lit", "value": "#34C759" }
                }
              }
            ]
          },
          {
            "kind": "element",
            "tag": "filter",
            "props": {
              "id": { "expr": "lit", "value": "lineGlow" }
            },
            "children": [
              {
                "kind": "element",
                "tag": "feGaussianBlur",
                "props": {
                  "in": { "expr": "lit", "value": "SourceAlpha" },
                  "stdDeviation": { "expr": "lit", "value": "3" }
                }
              },
              {
                "kind": "element",
                "tag": "feOffset",
                "props": {
                  "dx": { "expr": "lit", "value": "0" },
                  "dy": { "expr": "lit", "value": "1" }
                }
              },
              {
                "kind": "element",
                "tag": "feComponentTransfer",
                "props": {},
                "children": [
                  {
                    "kind": "element",
                    "tag": "feFuncA",
                    "props": {
                      "type": { "expr": "lit", "value": "linear" },
                      "slope": { "expr": "lit", "value": "0.3" }
                    }
                  }
                ]
              },
              {
                "kind": "element",
                "tag": "feMerge",
                "props": {},
                "children": [
                  { "kind": "element", "tag": "feMergeNode", "props": {} },
                  { "kind": "element", "tag": "feMergeNode", "props": { "in": { "expr": "lit", "value": "SourceGraphic" } } }
                ]
              }
            ]
          }
        ]
      },
      {
        "kind": "if",
        "condition": { "expr": "param", "name": "showGrid" },
        "then": {
          "kind": "element",
          "tag": "g",
          "props": {},
          "children": [
            {
              "kind": "each",
              "items": { "expr": "local", "name": "_gridLines" },
              "as": "gl",
              "index": "glIdx",
              "body": {
                "kind": "element",
                "tag": "g",
                "props": {},
                "children": [
                  {
                    "kind": "element",
                    "tag": "line",
                    "props": {
                      "x1": { "expr": "local", "name": "_paddingLeft" },
                      "y1": { "expr": "get", "base": { "expr": "var", "name": "gl" }, "path": "y" },
                      "x2": { "expr": "local", "name": "_width" },
                      "y2": { "expr": "get", "base": { "expr": "var", "name": "gl" }, "path": "y" },
                      "stroke": { "expr": "lit", "value": "#d1d5db" },
                      "stroke-width": { "expr": "lit", "value": "0.5" },
                      "stroke-opacity": { "expr": "lit", "value": "0.25" }
                    }
                  },
                  {
                    "kind": "element",
                    "tag": "text",
                    "props": {
                      "x": { "expr": "bin", "op": "-", "left": { "expr": "local", "name": "_paddingLeft" }, "right": { "expr": "lit", "value": 8 } },
                      "y": { "expr": "bin", "op": "+", "left": { "expr": "get", "base": { "expr": "var", "name": "gl" }, "path": "y" }, "right": { "expr": "lit", "value": 3 } },
                      "text-anchor": { "expr": "lit", "value": "end" },
                      "className": { "expr": "style", "name": "chartYLabel" }
                    },
                    "children": [
                      {
                        "kind": "text",
                        "value": { "expr": "get", "base": { "expr": "var", "name": "gl" }, "path": "label" }
                      }
                    ]
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "kind": "element",
        "tag": "path",
        "props": {
          "d": {
            "expr": "call",
            "target": null,
            "method": "getLinePath",
            "args": [
              {
                "expr": "call",
                "target": {
                  "expr": "param",
                  "name": "data"
                },
                "method": "map",
                "args": [
                  {
                    "expr": "lambda",
                    "param": "item",
                    "index": "idx",
                    "body": {
                      "expr": "obj",
                      "props": {
                        "x": {
                          "expr": "bin",
                          "op": "+",
                          "left": {
                            "expr": "local",
                            "name": "_paddingLeft"
                          },
                          "right": {
                            "expr": "bin",
                            "op": "*",
                            "left": {
                              "expr": "var",
                              "name": "idx"
                            },
                            "right": {
                              "expr": "bin",
                              "op": "/",
                              "left": {
                                "expr": "bin",
                                "op": "-",
                                "left": {
                                  "expr": "local",
                                  "name": "_width"
                                },
                                "right": {
                                  "expr": "bin",
                                  "op": "*",
                                  "left": { "expr": "local", "name": "_paddingLeft" },
                                  "right": { "expr": "lit", "value": 2 }
                                }
                              },
                              "right": {
                                "expr": "bin",
                                "op": "-",
                                "left": {
                                  "expr": "call",
                                  "target": {
                                    "expr": "param",
                                    "name": "data"
                                  },
                                  "method": "length",
                                  "args": []
                                },
                                "right": {
                                  "expr": "lit",
                                  "value": 1
                                }
                              }
                            }
                          }
                        },
                        "y": {
                          "expr": "call",
                          "target": null,
                          "method": "scaleChartY",
                          "args": [
                            { "expr": "index", "base": { "expr": "var", "name": "item" }, "key": { "expr": "param", "name": "valueKey" } },
                            { "expr": "get", "base": { "expr": "local", "name": "_bounds" }, "path": "min" },
                            { "expr": "get", "base": { "expr": "local", "name": "_bounds" }, "path": "max" },
                            { "expr": "local", "name": "_height" },
                            { "expr": "local", "name": "_paddingTop" },
                            { "expr": "local", "name": "_paddingBottom" }
                          ]
                        }
                      }
                    }
                  }
                ]
              },
              {
                "expr": "param",
                "name": "curved"
              }
            ]
          },
          "stroke": {
            "expr": "cond",
            "if": {
              "expr": "param",
              "name": "colors"
            },
            "then": {
              "expr": "call",
              "target": {
                "expr": "param",
                "name": "colors"
              },
              "method": "at",
              "args": [
                {
                  "expr": "lit",
                  "value": 0
                }
              ]
            },
            "else": {
              "expr": "lit",
              "value": "url(#lineGradient0)"
            }
          },
          "stroke-width": {
            "expr": "cond",
            "if": {
              "expr": "param",
              "name": "strokeWidth"
            },
            "then": {
              "expr": "param",
              "name": "strokeWidth"
            },
            "else": {
              "expr": "lit",
              "value": 2.5
            }
          },
          "stroke-linecap": { "expr": "lit", "value": "round" },
          "stroke-linejoin": { "expr": "lit", "value": "round" },
          "fill": { "expr": "lit", "value": "none" },
          "filter": { "expr": "lit", "value": "url(#lineGlow)" },
          "className": {
            "expr": "style",
            "name": "chartLine"
          }
        }
      },
      {
        "kind": "if",
        "condition": {
          "expr": "param",
          "name": "showPoints"
        },
        "then": {
          "kind": "element",
          "tag": "g",
          "props": {},
          "children": [
            {
              "kind": "each",
              "items": {
                "expr": "param",
                "name": "data"
              },
              "as": "item",
              "index": "idx",
              "body": {
                "kind": "element",
                "tag": "circle",
                "props": {
                  "cx": {
                    "expr": "bin",
                    "op": "+",
                    "left": {
                      "expr": "local",
                      "name": "_paddingLeft"
                    },
                    "right": {
                      "expr": "bin",
                      "op": "*",
                      "left": {
                        "expr": "var",
                        "name": "idx"
                      },
                      "right": {
                        "expr": "bin",
                        "op": "/",
                        "left": {
                          "expr": "bin",
                          "op": "-",
                          "left": {
                            "expr": "local",
                            "name": "_width"
                          },
                          "right": {
                            "expr": "bin",
                            "op": "*",
                            "left": { "expr": "local", "name": "_paddingLeft" },
                            "right": { "expr": "lit", "value": 2 }
                          }
                        },
                        "right": {
                          "expr": "bin",
                          "op": "-",
                          "left": {
                            "expr": "call",
                            "target": {
                              "expr": "param",
                              "name": "data"
                            },
                            "method": "length",
                            "args": []
                          },
                          "right": {
                            "expr": "lit",
                            "value": 1
                          }
                        }
                      }
                    }
                  },
                  "cy": {
                    "expr": "call",
                    "target": null,
                    "method": "scaleChartY",
                    "args": [
                      { "expr": "index", "base": { "expr": "var", "name": "item" }, "key": { "expr": "param", "name": "valueKey" } },
                      { "expr": "get", "base": { "expr": "local", "name": "_bounds" }, "path": "min" },
                      { "expr": "get", "base": { "expr": "local", "name": "_bounds" }, "path": "max" },
                      { "expr": "local", "name": "_height" },
                      { "expr": "local", "name": "_paddingTop" },
                      { "expr": "local", "name": "_paddingBottom" }
                    ]
                  },
                  "r": {
                    "expr": "cond",
                    "if": {
                      "expr": "param",
                      "name": "pointRadius"
                    },
                    "then": {
                      "expr": "param",
                      "name": "pointRadius"
                    },
                    "else": {
                      "expr": "lit",
                      "value": 5
                    }
                  },
                  "fill": {
                    "expr": "cond",
                    "if": {
                      "expr": "param",
                      "name": "colors"
                    },
                    "then": {
                      "expr": "call",
                      "target": {
                        "expr": "param",
                        "name": "colors"
                      },
                      "method": "at",
                      "args": [
                        {
                          "expr": "lit",
                          "value": 0
                        }
                      ]
                    },
                    "else": {
                      "expr": "lit",
                      "value": "#30D158"
                    }
                  },
                  "stroke": { "expr": "lit", "value": "white" },
                  "stroke-width": { "expr": "lit", "value": "2" },
                  "filter": { "expr": "lit", "value": "url(#lineGlow)" },
                  "tabindex": {
                    "expr": "lit",
                    "value": "0"
                  },
                  "className": {
                    "expr": "style",
                    "name": "chartPoint",
                    "variants": {
                      "size": {
                        "expr": "lit",
                        "value": "default"
                      },
                      "state": {
                        "expr": "lit",
                        "value": "default"
                      }
                    }
                  }
                }
              }
            }
          ]
        }
      },
      {
        "kind": "if",
        "condition": {
          "expr": "param",
          "name": "showLabels"
        },
        "then": {
          "kind": "element",
          "tag": "g",
          "props": {
            "className": {
              "expr": "style",
              "name": "chartLabel",
              "variants": {
                "type": {
                  "expr": "lit",
                  "value": "axis"
                }
              }
            }
          },
          "children": [
            {
              "kind": "each",
              "items": {
                "expr": "param",
                "name": "data"
              },
              "as": "item",
              "index": "idx",
              "body": {
                "kind": "element",
                "tag": "text",
                "props": {
                  "x": {
                    "expr": "bin",
                    "op": "+",
                    "left": {
                      "expr": "local",
                      "name": "_paddingLeft"
                    },
                    "right": {
                      "expr": "bin",
                      "op": "*",
                      "left": {
                        "expr": "var",
                        "name": "idx"
                      },
                      "right": {
                        "expr": "bin",
                        "op": "/",
                        "left": {
                          "expr": "bin",
                          "op": "-",
                          "left": {
                            "expr": "local",
                            "name": "_width"
                          },
                          "right": {
                            "expr": "bin",
                            "op": "*",
                            "left": { "expr": "local", "name": "_paddingLeft" },
                            "right": { "expr": "lit", "value": 2 }
                          }
                        },
                        "right": {
                          "expr": "bin",
                          "op": "-",
                          "left": {
                            "expr": "call",
                            "target": {
                              "expr": "param",
                              "name": "data"
                            },
                            "method": "length",
                            "args": []
                          },
                          "right": {
                            "expr": "lit",
                            "value": 1
                          }
                        }
                      }
                    }
                  },
                  "y": {
                    "expr": "bin",
                    "op": "+",
                    "left": {
                      "expr": "local",
                      "name": "_height"
                    },
                    "right": {
                      "expr": "lit",
                      "value": 15
                    }
                  },
                  "text-anchor": {
                    "expr": "lit",
                    "value": "middle"
                  }
                },
                "children": [
                  {
                    "kind": "text",
                    "value": {
                      "expr": "cond",
                      "if": {
                        "expr": "param",
                        "name": "labelKey"
                      },
                      "then": {
                        "expr": "index", "base": {
                          "expr": "var",
                          "name": "item"
                        }, "key": {
                          "expr": "param",
                          "name": "labelKey"
                        }
                      },
                      "else": {
                        "expr": "var",
                        "name": "idx"
                      }
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  }
}
