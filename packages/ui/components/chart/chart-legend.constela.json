{
  "params": {
    "items": {
      "type": "json",
      "required": true
    },
    "orientation": {
      "type": "string",
      "required": false
    },
    "position": {
      "type": "string",
      "required": false
    }
  },
  "view": {
    "kind": "element",
    "tag": "div",
    "props": {
      "role": {
        "expr": "lit",
        "value": "list"
      },
      "className": {
        "expr": "style",
        "name": "chartLegend",
        "variants": {
          "orientation": {
            "expr": "cond",
            "if": {
              "expr": "param",
              "name": "orientation"
            },
            "then": {
              "expr": "param",
              "name": "orientation"
            },
            "else": {
              "expr": "lit",
              "value": "horizontal"
            }
          }
        }
      }
    },
    "children": [
      {
        "kind": "each",
        "items": {
          "expr": "param",
          "name": "items"
        },
        "as": "item",
        "index": "idx",
        "body": {
          "kind": "element",
          "tag": "div",
          "props": {
            "role": {
              "expr": "lit",
              "value": "listitem"
            },
            "className": {
              "expr": "style",
              "name": "chartLegendItem",
              "variants": {
                "state": {
                  "expr": "lit",
                  "value": "default"
                }
              }
            }
          },
          "children": [
            {
              "kind": "element",
              "tag": "span",
              "props": {
                "className": {
                  "expr": "lit",
                  "value": "w-3 h-3 rounded-full"
                },
                "style": { "expr": "concat", "items": [
                    {
                      "expr": "lit",
                      "value": "background-color: "
                    },
                    {
                      "expr": "cond",
                      "if": {
                        "expr": "get",
                        "base": {
                          "expr": "var",
                          "name": "item"
                        },
                        "path": "color"
                      },
                      "then": {
                        "expr": "get",
                        "base": {
                          "expr": "var",
                          "name": "item"
                        },
                        "path": "color"
                      },
                      "else": {
                        "expr": "lit",
                        "value": "#3b82f6"
                      }
                    }
                  ]
                }
              }
            },
            {
              "kind": "element",
              "tag": "span",
              "props": {},
              "children": [
                {
                  "kind": "text",
                  "value": {
                    "expr": "get",
                    "base": {
                      "expr": "var",
                      "name": "item"
                    },
                    "path": "label"
                  }
                }
              ]
            }
          ]
        }
      }
    ]
  }
}
