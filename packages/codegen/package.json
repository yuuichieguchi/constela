{
  "name": "@constela/codegen",
  "version": "0.1.0",
  "private": true,
  "description": "Code generator for Constela VSCode extension - generates completion, hover, and TextMate grammar from AST types",
  "type": "module",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "generate": "tsx scripts/generate.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "ts-morph": "^24.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT"
}
