{
  "name": "@constela/server",
  "version": "5.0.1",
  "description": "Server-side rendering for Constela UI framework",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build"
  },
  "peerDependencies": {
    "@constela/compiler": "^0.9.1"
  },
  "dependencies": {
    "isomorphic-dompurify": "^2.35.0",
    "marked": "^17.0.1",
    "marked-shiki": "^1.2.0",
    "shiki": "^1.0.0"
  },
  "devDependencies": {
    "@constela/compiler": "workspace:*",
    "@types/node": "^20.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT"
}
