{
  "name": "@constela/runtime",
  "version": "0.18.3",
  "description": "Runtime DOM renderer for Constela UI framework",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@constela/compiler": "workspace:*",
    "@constela/core": "workspace:*",
    "dompurify": "^3.3.1",
    "marked": "^17.0.1",
    "shiki": "^3.20.0"
  },
  "devDependencies": {
    "@constela/server": "workspace:*",
    "@types/dompurify": "^3.2.0",
    "@types/jsdom": "^21.1.0",
    "@types/node": "^20.10.0",
    "jsdom": "^24.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT"
}
